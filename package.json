{
  "name": "fancify",
  "version": "1.2.0",
  "author": "Bauke <me@bauke.xyz>",
  "repository": "https://gitlab.com/Bauke/fancify",
  "license": "MIT",
  "main": "build/main.js",
  "types": "build/main.d.ts",
  "files": [
    "build/",
    "characters.json"
  ],
  "scripts": {
    "build": "tsc",
    "test": "yarn build && xo && nyc ava"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^12.0.10",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "ava": "^2.1.0",
    "codecov": "^3.5.0",
    "eslint": "^5.16.0",
    "eslint-config-xo": "^0.26.0",
    "eslint-config-xo-typescript": "^0.15.0",
    "nyc": "^14.1.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2",
    "xo": "^0.24.0"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "xo": {
    "extends": "xo-typescript",
    "extensions": [
      "ts"
    ],
    "ignores": [
      "build/**"
    ],
    "rules": {
      "@typescript-eslint/indent": [
        "error",
        2,
        { 
          "SwitchCase": 1
        }
      ],
      "capitalized-comments": "off"
    }
  }
}
