{
  "name": "fancify",
  "description": "Convert letters and numbers to fancy Unicode ones.",
  "version": "1.2.7",
  "author": "Bauke <me@bauke.xyz>",
  "homepage": "https://git.holllo.cc/Bauke/fancify",
  "license": "MIT",
  "main": "build/source/index.js",
  "types": "build/source/index.d.ts",
  "files": [
    "build/source/"
  ],
  "scripts": {
    "build": "tsc",
    "test": "xo && ava --verbose",
    "prepublishOnly": "rm -rf build/ && yarn build && yarn test"
  },
  "devDependencies": {
    "ava": "^3.10.1",
    "husky": "^4.2.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6",
    "xo": "^0.32.1"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "tests/*.test.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "xo": {
    "prettier": true,
    "rules": {
      "capitalized-comments": "off"
    },
    "space": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test",
      "pre-push": "yarn test"
    }
  }
}
